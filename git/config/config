
[alias]
    b     = branch
    ba    = branch -a
    br    = branch -r
    ci    = commit
    co    = checkout
    cob   = checkout -b
    d     = diff
    dc    = diff --cached
    fp    = format-patch
    g     = !git gui &
    gr    = log --graph
    go    = log --graph --pretty=oneline --abbrev-commit
    k     = !gitk &
    ka    = !gitk --all &
    lc    = log ORIG_HEAD.. --stat --no-merges
    lp    = log --patch-with-stat
    mnf   = merge --no-ff
    p     = format-patch -1
    st    = status
    stm   = status --untracked=no
    stfu  = status --untracked=no
    pullsrb = !git stash save && git pull --rebase && git stash pop && echo 'Success!'
    rename  = mv

[push]
    default = simple
